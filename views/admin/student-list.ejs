<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <div class="main-layout">
        <%- include('../partials/sidebar') %>

            <div class="main-content">
                <%- include('../partials/header') %>

                    <main>
                        <div class="fade-in">
                            <!-- Page Header -->
                            <div class="card mb-4"
                                style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%); color: white; border: none;">
                                <div class="card-body"
                                    style="display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; gap: 1rem;">
                                    <div>
                                        <h2
                                            style="color: white; font-size: 1.75rem; margin-bottom: 0.5rem; display: flex; align-items: center; gap: 0.75rem;">
                                            <i class="fas fa-user-graduate"></i>
                                            Student Management
                                        </h2>
                                        <p style="color: rgba(255,255,255,0.9); margin: 0;">Manage student accounts and
                                            view assignments</p>
                                    </div>
                                    <a href="/admin/students/add" class="btn"
                                        style="background: white; color: var(--primary-color); font-weight: 700;">
                                        <i class="fas fa-plus"></i> Add New Student
                                    </a>
                                </div>
                            </div>

                            <!-- Students List Card -->
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title" style="display: flex; align-items: center; gap: 0.75rem;">
                                        <i class="fas fa-list"></i>
                                        All Students
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <% if (students && students.length> 0) { %>
                                        <div class="table-container">
                                            <table>
                                                <thead>
                                                    <tr>
                                                        <th>Student</th>
                                                        <th>Email</th>
                                                        <th>Assigned Staff</th>
                                                        <th>Status</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% students.forEach(student=> { %>
                                                        <tr>
                                                            <td data-label="Student">
                                                                <div
                                                                    style="display: flex; align-items: center; gap: 1rem;">
                                                                    <div
                                                                        style="width: 40px; height: 40px; background: linear-gradient(135deg, var(--success-color) 0%, var(--success-dark) 100%); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700;">
                                                                        <%= student.name.charAt(0) %>
                                                                    </div>
                                                                    <div>
                                                                        <div
                                                                            style="font-weight: 700; color: var(--gray-900);">
                                                                            <%= student.name %>
                                                                        </div>
                                                                        <div
                                                                            style="font-size: 0.8125rem; color: var(--gray-500);">
                                                                            ID: <%= student.id %>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td data-label="Email">
                                                                <div
                                                                    style="display: flex; align-items: center; gap: 0.5rem; color: var(--gray-700);">
                                                                    <i class="fas fa-envelope"
                                                                        style="color: var(--gray-400);"></i>
                                                                    <%= student.email %>
                                                                </div>
                                                            </td>
                                                            <td data-label="Assigned Staff">
                                                                <% if (student.assigned_staff) { %>
                                                                    <div
                                                                        style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.375rem 0.75rem; background: var(--gray-100); border-radius: 9999px; font-size: 0.875rem;">
                                                                        <i class="fas fa-chalkboard-teacher"
                                                                            style="color: var(--warning-color);"></i>
                                                                        <span style="font-weight: 600;">
                                                                            <%= student.assigned_staff %>
                                                                        </span>
                                                                    </div>
                                                                    <% } else { %>
                                                                        <span class="badge badge-secondary">
                                                                            <i class="fas fa-exclamation-circle"></i>
                                                                            Unassigned
                                                                        </span>
                                                                        <% } %>
                                                            </td>
                                                            <td data-label="Status">
                                                                <span
                                                                    class="badge badge-<%= student.is_active ? 'success' : 'danger' %>">
                                                                    <i
                                                                        class="fas fa-<%= student.is_active ? 'check-circle' : 'ban' %>"></i>
                                                                    <%= student.is_active ? 'Active' : 'Inactive' %>
                                                                </span>
                                                            </td>
                                                            <td data-label="Actions">
                                                                <div
                                                                    style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                                                    <a href="/admin/students/edit/<%= student.id %>"
                                                                        class="btn btn-sm btn-primary" title="Edit">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                    <button
                                                                        onclick="toggleStatus('/admin/students/toggle/<%= student.id %>', 'student')"
                                                                        class="btn btn-sm btn-<%= student.is_active ? 'danger' : 'success' %>"
                                                                        title="<%= student.is_active ? 'Deactivate' : 'Activate' %>">
                                                                        <i
                                                                            class="fas fa-<%= student.is_active ? 'ban' : 'check' %>"></i>
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <% } else { %>
                                            <div style="text-align: center; padding: 4rem 2rem;">
                                                <div
                                                    style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--gray-100) 0%, var(--gray-200) 100%); border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; margin-bottom: 1.5rem;">
                                                    <i class="fas fa-user-graduate"
                                                        style="font-size: 2rem; color: var(--gray-400);"></i>
                                                </div>
                                                <h4 style="color: var(--gray-600); margin-bottom: 0.5rem;">No Students
                                                    Found</h4>
                                                <p style="color: var(--gray-500); margin-bottom: 2rem;">Get started by
                                                    adding your first student.</p>
                                                <a href="/admin/students/add" class="btn btn-primary">
                                                    <i class="fas fa-plus"></i> Add Student
                                                </a>
                                            </div>
                                            <% } %>
                                </div>
                            </div>
                        </div>
                    </main>

                    <%- include('../partials/footer') %>
            </div>
    </div>

    <script src="/js/main.js"></script>
</body>

</html>
